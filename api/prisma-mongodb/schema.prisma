generator client {
  provider = "prisma-client"
  output   = "../db/mongodb/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_DATABASE_URL")
}

model Games {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  tournamentId  String   @db.ObjectId
  timestamp     DateTime @default(now())
  rounds        Round[]
  winnerId      String?  @db.ObjectId
  metadata      Metadata?
}

type Round {
  id          String
  type        userType
  initialHand String[]
  action      Actions?
  turn        Int
  result      Result?
}

type Result {
  hand      String[]
  score     Int
  isBusted  Boolean
}

type Metadata {
  durationSeconds Int
}

enum Actions {
  HIT
  STAND
}

enum userType {
  PLAYER
  BOT
  DEALER
}