  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "session_id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "max_profit": {
            "type": "number"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "UserListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "$ref": "#/components/schemas/User"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "CreateUserRequest": {
        "type": "object",
        "required": ["session_id", "username"],
        "properties": {
          "session_id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "max_profit": {
            "type": "number"
          }
        }
      },
      "UpdateUserRequest": {
        "type": "object",
        "properties": {
          "session_id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "max_profit": {
            "type": "number"
          }
        }
      },
