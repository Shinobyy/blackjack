          }
        }
      },
      "BotResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "$ref": "#/components/schemas/Bot"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "CreateBotRequest": {
        "type": "object",
        "required": ["username"],
        "properties": {
          "username": {
            "type": "string"
          }
        }
      },
      "UpdateBotRequest": {
        "type": "object",
        "required": ["username"],
        "properties": {
          "username": {
            "type": "string"
          }
        }
      },
      "Tournament": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "user_id": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "TournamentListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tournament"
            }
          }
        }
      },
      "TournamentResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "$ref": "#/components/schemas/Tournament"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "CreateTournamentRequest": {
        "type": "object",
        "required": ["user_id"],
        "properties": {
          "user_id": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          }
        }
      },
      "UpdateTournamentRequest": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          }
        }
      },
      "CreateGameRequest": {
        "type": "object",
        "properties": {
          "tournamentId": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "rounds": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "winnerId": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          }
        }
      },
      "GameListResponse": {
        "type": "object",
        "properties": {
          "cursor": {
            "type": "object",
            "properties": {
              "firstBatch": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
